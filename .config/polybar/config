[module/wm]
type= internal/bspwm

label-empty = 

label-focused = " %name% "
label-focused-underline = ${colors.nord4}

label-occupied = " %name% "

label-urgent = " %name% "
label-urgent-foreground = ${colors.nord11}
label-urgent-underline = ${colors.nord11}
label-urgent-font = 4

[module/mpd]
type = internal/mpd

label-song = %artist% - %title%
format-online = <toggle> %{A3:mpc stop:}%{A1:kitty -e ncmpcpp &:}<label-song> <label-time>%{A}%{A}

format-paused = <toggle> | %{A3:mpc stop:}%{A1:kitty -e ncmpcpp &:}<label-song> <label-time>%{A}%{A}
format-playing = <toggle> | %{A3:mpc stop:}%{A1:kitty -e ncmpcpp &:}<label-song> <label-time>%{A}%{A}
format-stopped = 

icon-pause-font = 5
icon-play-font = 5

;icon-pause = "  "
;icon-play = "  "
icon-pause = ""
icon-play = ""
; icon-pause = "  "
; icon-play = "  "

[module/xbacklight]
type = internal/xbacklight

enable-scroll = true

format = <ramp> <label>

ramp-font = 4
ramp-0 = " L "

ramp-0-foreground = ${colors.nord15}

label = %percentage%%

bar-width = 10
bar-indicator = ╋
bar-fill = ━
bar-empty = ━

[module/battery]
type = internal/battery

battery = BAT0
full-at = 98

format-charging = %{A1:kitty -e gotop &:}<animation-charging> <label-charging>%{A}
format-discharging = %{A1:kitty -e gotop &:}<ramp-capacity> <label-discharging>%{A}
label-charging = +%percentage%%
label-discharging = %percentage%%
label-full = " Full "

ramp-capacity-foreground = ${colors.nord14}

ramp-capacity-0-foreground = ${colors.nord11}
ramp-capacity-1-foreground = ${colors.nord12}
ramp-capacity-2-foreground = ${colors.nord13}

label-full-foreground = ${colors.nord14}

ramp-capacity-font = 4

ramp-capacity-0 = " B "
ramp-capacity-1 = " B "
ramp-capacity-2 = " B "
ramp-capacity-3 = " B "
ramp-capacity-4 = " B "
ramp-capacity-5 = " B "
ramp-capacity-6 = " B "
ramp-capacity-7 = " B "
ramp-capacity-8 = " B "
ramp-capacity-9 = " B "

; ramp-capacity-0 = 
; ramp-capacity-1 = 
; ramp-capacity-2 = 
; ramp-capacity-3 = 

; animation-charging-0 = 
; animation-charging-1 = 
; animation-charging-2 = 

