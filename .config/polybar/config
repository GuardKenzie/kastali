animation-charging-framerate = 500

[module/date]
type = internal/date
label-active-font = 2
interval = 5 
date = %a %d %b
time = %l:%M %p
label = " %{A1:urxvt -geometry 20x10 -e sh -c "cal;read":}%{A3:urxvt -geometry 20x25 -e sh -c "cal -3;read":}%{A2:urxvt -geometry 66x35 -e sh -c "cal -y;read":}%date%%{A}%{A}%{A} - %time% "
;label =  %time%
format-padding = 1
label-foreground=${colors.nord4}

[module/pulseaudio]
module-margin = 0
type = internal/pulseaudio
label-active-font = 2
format-volume = <ramp-volume> <label-volume>
format-muted =  <label-muted> Muted
; ramp-volume-0 = 
; ramp-volume-1 = 
; ramp-volume-2 = 

ramp-volume-font = 4
label-muted-font = 4

ramp-volume-0 = " V "
label-muted = " M "

ramp-volume-foreground = ${colors.nord13}
label-muted-foreground = ${colors.nord11}

[module/poweroff]
type = custom/script
label-active-font = 2
exec = echo "  "
click-left = rofi -modi run,drun,window -show drun
click-right = i3lock-fancy -pg &
click-middle = /usr/bin/rofi-logout
format-padding = 1

[module/rofi]
type = custom/script
label-active-font = 2
exec = echo "  "
click-left = rofi -modi run,drun,window -show drun
format-padding = 1


[module/eth]
type = internal/network
label-active-font = 2
interface = wlan0
interval = 3.0
format-connected = <ramp-signal> <label-connected>
format-connected-prefix = " "
; ramp-signal-0 = 
; ramp-signal-1 = 
; ramp-signal-2 = 
ramp-signal-font = 4

ramp-signal-0 = " N "
ramp-signal-foreground = ${colors.nord14}


format-connected-prefix-foreground = #b6a49b
label-connected = %{A1:~/.dotfiles/rofi-network/nmcli-rofi:} %essid% %downspeed:9%%{A}

format-disconnected = <label-disconnected>
; format-disconnected-prefix = 

label-disconnected = %{A1:networkmanager_dmenu:} N %{A}
label-disconnected-foreground = ${colors.red}
label-disconnected-font = 4
format-padding = 1

[module/bluetooth]
format-label-margin = 0
type = custom/script

exec = $HOME/.dotfiles/bt-2

tail = true
interval = 2

format = <label>

label = %{A3:kitty -e bluetoothctl &:}%output%%{A}

format-prefix-font=3
format-prefix-background = ${colors.nord1}
